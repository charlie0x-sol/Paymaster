# Server Configuration
PORT=3000
SOLANA_NETWORK=devnet
# Generate a key using `node generateKeypair.js` and paste the Hex string here
SERVER_PRIVATE_KEY=
# Optional: Secondary key for rotation
SERVER_PRIVATE_KEY_OLD=

# Security
JWT_SECRET=your_super_secret_jwt_key_here
ALLOWED_ORIGINS=*

# Database
REDIS_URL=redis://localhost:6379

# Rules Engine Configuration
# Max number of sponsored transactions per user
MAX_SPONSORED_TRANSACTIONS=5
# Max total amount of SOL to sponsor per user
MAX_SPONSORED_AMOUNT_SOL=0.0001
# Comma-separated list of Program IDs to allow (leave empty for default)
ALLOWED_PROGRAM_IDS=